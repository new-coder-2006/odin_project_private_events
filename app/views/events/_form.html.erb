<h1>New Event</h1>

<%= form_with model: @event do |form| %>
    <div>
        <%= form.label :event_name %><br>
        <%= form.text_field :event_name %>
        <% post.errors.full_messages_for(:event_name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :location %><br>
        <%= form.text_area :location %>
        <% post.errors.full_messages_for(:location).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :event_date %><br>
        <%= form.text_area :event_date %>
        <% post.errors.full_messages_for(:event_date).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :details %><br>
        <%= form.text_area :details %>
        <% post.errors.full_messages_for(:details).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
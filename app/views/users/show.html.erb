<h1>Your Hosted Events</h1>

<% @user_events.each do |user_event| %>
    <div class="user_event">
      <h2><%= user_event.event_name %></h2>
      <p><%= user_event.location %></p>
      <p><%= user_event.event_date %></p>
    </div>
<% end %>

